@{
    ViewData["Title"] = "Закусочная. Пополнение склада";
}

<div class="text-center">
    <h2 class="display-4">Пополнить склад</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Склад:</div>
        <div class="col-8">
            <select name="storeHouseId" class="form-control" asp-items="@(new SelectList(ViewBag.StoreHouses, "Id", "StoreHouseName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Продукт:</div>
        <div class="col-8">
            <select name="foodId" class="form-control" asp-items="@(new SelectList(ViewBag.Foods, "Id", "FoodName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8"><input type="text" name="count" /></div>
    </div>
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4">
            <input type="submit" value="Пополнить" class="btn btn-primary" />
        </div>
    </div>
</form>